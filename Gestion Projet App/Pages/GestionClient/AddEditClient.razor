<EditForm Model="@clientDto" OnValidSubmit="Submit">
    <ValidationSummary />
    <DataAnnotationsValidator />
    <div class="row">

        <div class="mb-3 col-sm-6">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" @bind-value="@clientDto.Email" placeholder="nom@example.com">
        </div>

        <div class="mb-3 col-sm-6">
            <label class="form-label">Nom Complet</label>
            <input type="text" class="form-control" @bind-value="@clientDto.Name" placeholder="Nom complet">
        </div>
    </div>
    <div class="row">

        <div class="mb-3 col-sm-6">
            <label class="form-label">Téléphone</label>
            <input type="text" class="form-control" @bind-value="@clientDto.Phone" placeholder="Téléphone">
        </div>

        <div class="mb-3 col-sm-6">
            <label class="form-label">Adresse</label>
            <input type="text" class="form-control" @bind-value="@clientDto.Address" placeholder="Adresse">
        </div>
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-success text-white" value="Valider" />
    </div>
</EditForm>

